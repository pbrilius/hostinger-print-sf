{% extends 'base.html.twig' %}

{% block title %}Plant{% endblock %}

{% block body %}
    <h1>{% trans %}Plant{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ plant.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Categoryname{% endtrans %}</th>
                <td>{{ plant.categoryname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Parentplant{% endtrans %}</th>
                <td>{{ plant.parentplant }}</td>
            </tr>
            <tr>
                <th>{% trans %}Createdat{% endtrans %}</th>
                <td>{{ plant.createdat ? plant.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Updatedat{% endtrans %}</th>
                <td>{{ plant.updatedat ? plant.updatedat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('plant_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a href="{{ path('plant_edit', {'id': plant.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('plant/_delete_form.html.twig') }}
{% endblock %}
