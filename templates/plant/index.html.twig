{% extends 'base.html.twig' %}

{% block title %}{% trans %}Plant index{% endtrans %}{% endblock %}

{% block body %}
    <h1 class="display-4">{% trans %}Plant index{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %}Categoryname{% endtrans %}</th>
                <th>{% trans %}Createdat{% endtrans %}</th>
                <th>{% trans %}Updatedat{% endtrans %}</th>
                <th>{% trans %}actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for plant in plants %}
            <tr>
                <td>{{ plant.id }}</td>
                <td>{{ plant.categoryname }}</td>
                <td>{{ plant.createdat ? plant.createdat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ plant.updatedat ? plant.updatedat|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('plant_show', {'id': plant.id}) }}">show</a>
                    <a href="{{ path('plant_edit', {'id': plant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-sm" href="{{ path('plant_new') }}">{% trans %}Create new{% endtrans %}</a>
{% endblock %}
